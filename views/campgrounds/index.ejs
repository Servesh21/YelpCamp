<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>

<h1>All Campgrounds</h1>

<% for (let camp of camps){ %>
<div class="card">
  <div class="row">
    <div class="col-md-4">
      <% if(camp.image.length) {%>
      <img class="img-fluid" alt="" src="<%= camp.image[0].url %>" />
      <% } else{%>
      <img
        class="img-fluid"
        alt=""
        src=" https://res.cloudinary.com/dv3lobczw/image/upload/v1739127006/YelpCamp/t47yiayv2hs3hahtedu9.jpg "
      />

      <% } %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= camp.id %>"
          ><%= camp.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
